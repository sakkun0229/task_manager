<!DOCTYPE html>
<html>
  <head>
    <title>TaskManager</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar-inverse">
    <ul>
      <li class="nav-item"><%= link_to "Top", "/" %></li>
      <li class="nav-item"><%= link_to "Add Task", new_task_path %></li>
      <li class="nav-item"><%= link_to "Admin", admin_users_path %></li>
      <li class="nav-item"><%= link_to "Login", login_path %></li>
      <li class="nav-item"><%= link_to "Logout", logout_path, method: :post %></li>
    </ul>
    </nav>

    <% if flash[:notice] %>
      <div>
        <%= flash[:notice] %>
      </div>
    <%end%>

    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
