<h2>Edit Task</h2>

<%= form_for @task, url:task_path do |f| %>
<p>
<% @task.errors.full_messages.each do |message| %>
  <%= message %>
<%end%>
</p>
<p>
  Content<br>
  <%= f.text_area :content %>
</p>
<p>
  Deadline<br>
  <%= f.date_field :deadline %>
</p>
<p>
  Status
  <%= f.select :status, Task.statuses.keys %>
</p>
<p>
  Priority
  <%= f.select :priority, Task.priorities.keys %>
</p>
<p>
  <%= f.submit  %>
</p>

<%end%>
