
<h1>Task Index</h1>

<table>
  <tr>
    <th>User</th>
    <th>Content</th>
    <th><a href="/?sort=status" class="btn">Status</a></th>
    <th><a href="/?sort=priority" class="btn">Priority</a></th>
    <th><a href="/?sort=deadline" class="btn">Deadline</a></th>
    <th><a href="/?sort=updated_at" class="btn">Update</a></th>
  </tr>
  <% @tasks.each do |task| %>
  <tr>
    <td></td>
    <td><%=task.content%></td>
    <td><%=task.status%></td>
    <td><%=task.priority%></td>
    <td><%=task.deadline%></td>
    <td><%=task.updated_at%></td>
    <td><%= link_to("edit", "tasks/#{task.id}/edit") %>
        <%= link_to("delete", "tasks/#{task.id}/destroy",{method:"post"}) %></td>
  </tr>
  <% end %>
</table>
